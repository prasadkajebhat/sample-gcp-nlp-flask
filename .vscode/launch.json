    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Backend",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend_api",
            "module": "flask",
            "env": {
                "FLASK_APP": "backend_api/main.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--port", "8080"
            ],
            "justMyCode": true
        }
    ]
}